{
  "name": "chat-project-root",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "start:server": "node server/index.js",
    "dev:client": "cd client && next dev",
    "dev:server": "cd server && nodemon index.js",
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\""
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}
